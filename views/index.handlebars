<h1>Burgers</h1>

<div class="non-devoured">
  <h2>Burgers Waiting To Be Eaten</h2>
  <ul>
    {{#each burgers}}
      {{#unless devoured}}
      <li>{{burger_name}}</li>
      {{/unless}}
    {{/each}}
  </ul>
</div>

<div class="devoured">
  <h2>Burgers That Have Been Devoured</h2>
  <ul>
    {{#each burgers}}
      {{#if devoured}}
        <li>{{burger_name}}</li>
      {{/if}}
     {{/each}}
  </ul>
</div>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="burger-id">Burger Name:</label>
    <input type="text" id="burger-id" name="burger-name">
  </div>

  <button type="submit">Add Burger</button>
</form>