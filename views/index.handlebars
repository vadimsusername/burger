<div class="flex-container">
  <div class="non-devoured flex-item">
    <h2>Burgers Waiting To Be Eaten</h2>
    <ul>
      {{#each burgers}}
        {{#unless devoured}}
        <li>{{burger_name}}
            <button class="devour-btn" data-id="{{id}}">
              DEVOUR!
            </button>
        </li>
        {{/unless}}
      {{/each}}
    </ul>
  </div>

  <div class="devoured flex-item">
    <h2>Burgers That Have Been Devoured</h2>
    <ul>
      {{#each burgers}}
        {{#if devoured}}
          <li>{{burger_name}}</li>
        {{/if}}
      {{/each}}
    </ul>
  </div>
</div>

<div class="form-container">
  <form class="create-form">

    <h2>Add a Burger</h2>

    <div class="form-group">
      <label for="burger-id">Burger Name:</label>
      <input type="text" id="burger-id" name="burger-name">
    </div>

    <button type="submit" class="submit-btn">Add Burger</button>
  </form>
</div>